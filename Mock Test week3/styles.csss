/* Base */
:root{
  --bg: #e7e88d;           /* soft green-yellow */
  --paper: #f7f7f8;        /* card background */
  --ink: #222426;
  --muted: #5e6167;
  --brand: #2c313a;
  --accent: #11171a;
  --ring: #8aa16b;         /* focus ring */
  --pill: #2b2f36;
  --pill-text: #e9edf2;
  --card-border: #9aa07a;
  --shadow: 0 1px 0 rgba(0,0,0,.06), 0 6px 14px rgba(0,0,0,.04);
}

*{ box-sizing: border-box; }
html, body{ height: 100%; }
body{
  margin: 0;
  font-family: "Inter", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  color: var(--ink);
  background: var(--bg);
  line-height: 1.55;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

/* Accessibility */
.skip-link{
  position: absolute; left: 8px; top: 8px;
  background: #fff; color: #000; padding: .5rem .75rem;
  border-radius: .5rem; box-shadow: var(--shadow);
  transform: translateY(-150%); transition: transform .2s ease;
  z-index: 1000;
}
.skip-link:focus{ transform: translateY(0); }

/* Header */
.site-header{
  padding: 18px min(4vw, 32px);
  display: grid; gap: 12px;
  align-items: center;
  grid-template-columns: 1fr;
  border-bottom: 1px solid rgba(0,0,0,.06);
}
.brand{
  display: flex; align-items: center; gap: 12px;
}
.brand-mark{
  display: grid; place-items: center;
  width: 60px; height: 60px;
  border-radius: 999px;
  background: radial-gradient(circle at 30% 35%, #4fb7a4, #2a9f8f 65%, #217f73);
  box-shadow: var(--shadow);
  color: #fff; text-decoration: none; font-size: 28px;
}
.brand-avatar{ transform: translateY(1px); }
.brand-text{ display: grid; gap: 2px; }
.site-title{
  font-family: "Playfair Display", Georgia, serif;
  margin: 0; letter-spacing: .3px;
  text-align: center; /* matches your mockup */
  font-weight: 700; font-size: clamp(28px, 3.3vw, 40px);
}
.site-tagline{
  margin: 0; color: var(--muted);
  font-size: clamp(12px, 1.5vw, 14px);
  text-align: right; /* to mimic top-right tagline */
}

/* Nav Pills */
.primary-nav ul{
  list-style: none; margin: 6px 0 0; padding: 0;
  display: flex; gap: 10px; flex-wrap: wrap;
}
.primary-nav .pill{
  display: inline-block;
  background: var(--pill);
  color: var(--pill-text);
  padding: 8px 14px;
  border-radius: 999px;
  text-decoration: none;
  font-weight: 600;
  border: 1px solid rgba(255,255,255,.08);
  box-shadow: 0 1px 0 rgba(255,255,255,.08) inset, var(--shadow);
}
.primary-nav .pill:focus-visible,
.primary-nav .pill:hover{
  background: #0f1216;
  outline: none;
}

/* Layout */
.page-wrap{
  display: grid; gap: 18px;
  grid-template-columns: 260px 1fr;
  padding: 10px min(4vw, 32px) 24px;
}
@media (max-width: 900px){
  .page-wrap{ grid-template-columns: 1fr; }
}

/* Sidebar / Joke card */
.sidebar{ position: relative; }
.joke-card{
  background: #f4f1d9;
  border: 1px solid #d2cda4;
  border-radius: 10px;
  padding: 18px;
  box-shadow: var(--shadow);
}
.joke-avatar{
  width: 90px; height: 90px; border-radius: 999px;
  display: grid; place-items: center; margin: 0 auto 12px;
  font-size: 42px; background: #ffe9a8;
  box-shadow: inset 0 2px 0 rgba(255,255,255,.6), var(--shadow);
}
.joke-heading{
  text-align: center; margin: 0 0 8px 0; font-size: 20px;
  font-weight: 700;
}
.joke-q{ font-weight: 600; margin: 8px 0 6px; }
.joke-a{ margin: 0; color: var(--muted); }

/* Content intro */
.section-intro{
  margin: 8px 0 12px;
  font-size: 18px; font-weight: 700;
}

/* Cards Grid */
.cards-grid{
  display: grid; gap: 16px;
  grid-template-columns: repeat(2, minmax(260px, 1fr));
}
@media (max-width: 800px){
  .cards-grid{ grid-template-columns: 1fr; }
}

/* Card */
.card{
  background: var(--paper);
  border: 1px solid var(--card-border);
  border-radius: 10px;
  box-shadow: var(--shadow);
  padding: 14px 16px 16px;
}
.card-head{
  display: grid; grid-template-columns: 52px 1fr;
  gap: 12px; align-items: center; margin-bottom: 8px;
}
.card-avatar{
  width: 52px; height: 52px; border-radius: 999px;
  display: grid; place-items: center; font-size: 26px;
  background: #dfe9f2; color: #1a2730; box-shadow: inset 0 1px 0 #fff, var(--shadow);
}
.card-title{
  margin: 0; font-size: 18px; font-weight: 800;
}
.card-sub{
  grid-column: 1 / -1;
  margin: 2px 0 0 0; color: var(--muted);
  font-size: 14px; font-weight: 500;
}
.card-list{
  margin: 8px 0 0; padding-left: 20px;
}
.card-list li{ margin: 6px 0; }
.warnings li{ list-style: "⚠️  "; padding-left: 4px; }

/* Footer */
.site-footer{
  border-top: 1px solid rgba(0,0,0,.06);
  padding: 14px min(4vw, 32px) 30px;
  display: grid; gap: 6px; justify-items: center;
}
.footer-links{
  margin: 0; padding: 0; list-style: none; display: flex; gap: 24px;
}
.footer-links a{
  color: var(--accent); text-decoration: underline; font-weight: 600;
}

/* Focus styles */
a:focus-visible, button:focus-visible, .pill:focus-visible{
  outline: 3px solid var(--ring);
  outline-offset: 2px;
  border-radius: 6px;
}

/* Reduce motion preference */
@media (prefers-reduced-motion: reduce){
  *, *::before, *::after{ animation: none !important; transition: none !important; }
}